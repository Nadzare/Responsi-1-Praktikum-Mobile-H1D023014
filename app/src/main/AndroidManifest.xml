<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin internet yang kita tambahin tadi -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Responsi1MobileH1D023014"
        tools:targetApi="31">


        <!-- Activity LAUNCHER (MainActivity) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity utama kamu (LAUNCHER) sebaiknya di paling atas -->

        <!-- Ini Activity lain yang kamu buat, sudah benar -->
        <activity
            android:name=".TeamActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.CoachActivity"
            android:exported="false" />
        <activity
            android:name=".HistoryActivity"
            android:exported="false" />

        <!--
          BARIS UNTUK .ui.fragment.PlayerDetailFragment SUDAH SAYA HAPUS.
          Fragment tidak perlu didaftarkan di sini.
        -->

    </application>

</manifest>

